{
    "apt-packages": [
        "sudo",
        "git",
        "stow",
        "apt-transport-https",
        "xfce4",
        "xfce4-power-manager",
        "xfce4-terminal",
        "xfce4-genmon-plugin",
        "xfce4-taskmanager",
        "thunar-archive-plugin",
        "network-manager-gnome",
        "gvfs-backends",
        "libsass1",
        "redshift-gtk",
        "synaptic",
        "firefox-esr",
        "evince",
        "ristretto",
        "rclone",
        "thunderbird",
        "telegram-desktop",
        "blueman"
    ],
    "stow-targets": [
        {
            "name": "git",
            "folder": [
                "~"
            ]
        },
        {
            "name": "bash",
            "folder": [
                "~"
            ]
        },
        {
            "name": "code",
            "folder": [
                ".config/Code/User"
            ]
        },
        {
            "name": "xfce4",
            "folder": [
                ".config/xfce4/"
            ]
        }
    ],
    "stow": [
        {
            "package": "git",
            "directory": "",
            "files":[
                ".gitconfig"
            ]
        },
        {
            "package": "bash",
            "directory": "", 
            "files":[
                ".bashrc",
                ".profile"
            ]
        },
        {
            "package": "code",
            "directory": ".config/Code/User", 
            "files":[
                ".config/Code/User/keybindings.json", 
                ".config/Code/User/settings.json"
            ]
        },
        {
            "package": "xfce4",
            "directory": ".config/xfce4/",
            "files":[
                ".config/xfce4/xfconf",
                ".config/xfce4/panel"
            ]
        }
    ], 
    "test": [
        {
            "package": "sara",
            "directory": "/home/$(logname)/.config/sara",
            "files":[
                "/home/$(logname)/.config/sara/index.html",
                "/home/$(logname)/.config/sara/scripts.js"
            ]
        }, 
        {
            "package": "sara",
            "directory": "/home/$(logname)",
            "files":[
                "/home/$(logname)/index.html",
                "/home/$(logname)/scripts.js"
            ]
        }
    ]
}