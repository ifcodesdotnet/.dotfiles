{
    "apt-packages": [
        "sudo",
        "git",
        "stow",
        "apt-transport-https",
        "xfce4",
        "xfce4-power-manager",
        "xfce4-terminal",
        "xfce4-genmon-plugin",
        "xfce4-taskmanager",
        "thunar-archive-plugin",
        "network-manager-gnome",
        "gvfs-backends",
        "libsass1",
        "redshift-gtk",
        "synaptic",
        "firefox-esr",
        "evince",
        "ristretto",
        "rclone",
        "thunderbird",
        "telegram-desktop",
        "blueman"
    ],
    "stow-targets": [
        {
            "name": "git",
            "folder": [
                "~"
            ]
        },
        {
            "name": "bash",
            "folder": [
                "~"
            ]
        },
        {
            "name": "code",
            "folder": [
                ".config/Code/User"
            ]
        },
        {
            "name": "xfce4",
            "folder": [
                ".config/xfce4/"
            ]
        }
    ], 
    "stow-targets-to-delete":[
        "~/.gitconfig",
        "~/.bashrc",
        "~/.profile", 
        "~/.config/xfce4/xfconf",
        "~/.config/xfce4/panel",
        "~/.config/Code/User/keybindings.json",
        "~/.config/Code/User/settings.json"
    ]
}